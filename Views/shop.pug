extends layouts/main-layout.pug

block styles
    link(rel="stylesheet", href="/css/product.css")

block content
    main
        if prods.length>0
            .grid
                each product in prods
                    article.card.product-item
                        header.card__header
                            h1.product__title #{product.title}
                        
                        .card__image
                            img(src="https://www.google.com/url?sa=i&source=images&cd=&ved=2ahUKEwjOtL-WoJzmAhV1xDgGHbfHDiUQjRx6BAgBEAQ&url=https%3A%2F%2Fclipartpng.com%2F%3F1051%2Cbrown-book-png-clipart&psig=AOvVaw3LZIjWclaPgPYjIHPwnpxW&ust=1575557755700700", alt="A Book")
                    
                        .card__content
                            h2.product__price $19.99
                            p.product__description A very interesting book about so many even more interesting things!
                        .card__actions
                            button.btn Add to Cart
        else 
            h1 No Products



